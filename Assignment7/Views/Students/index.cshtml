@model IEnumerable<Assignment7.Models.Student>

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">ðŸŽ“ Student List</h2>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-bordered table-hover table-striped">
                <thead class="table-dark text-center">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Course</th>
                        <th>Age</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Id</td>
                        <td>@s.Name</td>
                        <td>@s.Course</td>
                        <td>@s.Age</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
